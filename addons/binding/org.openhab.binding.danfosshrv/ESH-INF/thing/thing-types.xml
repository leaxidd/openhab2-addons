<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="danfosshrv" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!--HRV-->
	<thing-type id="hrv">
		<label>Danfoss Air Unit</label>
		<description>The Danfoss Air Unit Heat Exchanger, CCM and Air Dial</description>

		<channels>
            <channel id="mode" typeId="mode" />
            <channel id="fan_speed" typeId="fanSpeed" />
            <channel id="humidity" typeId="humidity" />
			<channel id="battery_life" typeId="batteryLife" />
            <channel id="current_time" typeId="currentTime" />
		</channels>

		<config-description>
            <parameter name="host" type="text" required="true">
                <label>Host</label>
                <context>network-address</context>
                <description>Host name or IP address of the Danfoss Air CCM</description>
            </parameter>
		</config-description>

	</thing-type>

	<!--Cannel Definitions-->
    <channel-type id="mode">
        <item-type>String</item-type>
        <label>Mode</label>
        <description>Off, Demand, Manual, Program</description>
        <state>
            <options>
                <option value="DEMAND">Demand</option>
                <option value="PROGRAM">Program</option>
                <option value="MANUAL">Manual</option>
                <option value="OFF">Off</option>
            </options></state>
    </channel-type>	
    <channel-type id="fanSpeed">
        <item-type>Dimmer</item-type>
        <label>Fan Speed</label>
        <state step="10"></state>
    </channel-type>	
	<channel-type id="batteryLife">
		<item-type>Number</item-type>
		<label>Battery Life</label>
        <description>Remaining Air Dial Battery Level</description>
        <state readOnly="true" min="0" max="100" pattern="%.0f %%"></state>
	</channel-type>
    <channel-type id="humidity">
        <item-type>Number</item-type>
        <label>Humidity</label>
        <category>Humidity</category>
        <tags>
            <tag>CurrentHumidity</tag>
        </tags>
        <state min="0" max="100" pattern="%.0f %%" readOnly="true">
        </state>
    </channel-type>
    <channel-type id="currentTime">
        <item-type>DateTime</item-type>
        <label>Current Time</label>
        <state readOnly="true">
        </state>
    </channel-type>
</thing:thing-descriptions>
